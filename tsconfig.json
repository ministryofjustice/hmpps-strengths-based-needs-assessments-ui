{
  "compileOnSave": true,
  "compilerOptions": {
    "target": "es2018",
    "module": "commonjs",
    "moduleResolution": "node",
    "outDir": "./dist",
    "skipLibCheck": true,
    "noEmit": false,
    "allowJs": true,
    "checkJs": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "noImplicitAny": true,
    "experimentalDecorators": true,
    "typeRoots": ["./server/@types", "./node_modules/@types"],
    "ignoreDeprecations": "5.0",
  },
  "exclude": ["node_modules", "assets/**/*.js", "cypress", "dist", "cypress.config.ts", "esbuild", "eslint.config.mjs"],
  "include": ["**/*.js", "**/*.ts"],
}
