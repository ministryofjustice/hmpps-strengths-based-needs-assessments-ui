{
  "name": "hmpps-strengths-based-needs-assessments-ui",
  "version": "0.0.1",
  "description": "HMPPS Strengths Based Needs Assessments UI",
  "repository": "git@github.com:ministryofjustice/hmpps-strengths-based-needs-assessments-ui.git",
  "license": "MIT",
  "scripts": {
    "watch-ts": "tsc -w",
    "build": "node esbuild/esbuild.config.js --build",
    "start": "node $NODE_OPTIONS dist/server.js | bunyan -o short",
    "start:dev": "concurrently -k -p \"[{name}]\" -n \"ESBuild,Node\" -c \"yellow.bold,cyan.bold\" \"node esbuild/esbuild.config.js --build --watch\" \"node esbuild/esbuild.config.js --dev-server\"",
    "start-feature": "export $(cat feature.env) && node $NODE_DEBUG_OPTION dist/server.js | bunyan -o short",
    "start-feature:dev": "export $(cat feature.env) && concurrently -k -p \"[{name}]\" -n \"ESBuild,Node\" -c \"yellow.bold,cyan.bold\" \"node esbuild/esbuild.config.js --build --watch\" \"node esbuild/esbuild.config.js --dev-server\"",
    "record-build-info": "node ./bin/record-build-info",
    "lint": "eslint . --cache --max-warnings 0",
    "lint:fix": "eslint . --cache --max-warnings 0 --fix",
    "typecheck": "tsc && tsc -p cypress",
    "test": "jest",
    "test:ci": "jest --runInBand",
    "security_audit": "npx audit-ci --config audit-ci.json",
    "clean": "rm -rf dist build node_modules stylesheets",
    "postinstall": "patch-package"
  },
  "engines": {
    "node": "^v22",
    "npm": "^11"
  },
  "jest": {
    "transform": {
      "^.+\\.tsx?$": [
        "ts-jest",
        {
          "isolatedModules": false
        }
      ]
    },
    "collectCoverageFrom": [
      "(server|app)/**/*.{ts,js,jsx,mjs}"
    ],
    "testMatch": [
      "<rootDir>/(server|job|app)/**/?(*.)(cy|test).{ts,js,jsx,mjs}"
    ],
    "testEnvironment": "node",
    "reporters": [
      "default",
      [
        "jest-junit",
        {
          "outputDirectory": "test_results/jest/"
        }
      ],
      [
        "./node_modules/jest-html-reporter",
        {
          "outputPath": "test_results/unit-test-reports.html"
        }
      ]
    ],
    "moduleFileExtensions": [
      "web.js",
      "js",
      "json",
      "node",
      "ts"
    ]
  },
  "nodemonConfig": {
    "ignore": [
      ".circleci/*",
      "migrations/*",
      "node_modules/*",
      "test/*",
      "cypress/*"
    ],
    "delay": 2500,
    "ext": "js,json,html,njk"
  },
  "lint-staged": {
    "*.{ts,js,css}": [
      "prettier --write",
      "eslint --fix"
    ],
    "*.json": [
      "prettier --write"
    ]
  },
  "dependencies": {
    "@faker-js/faker": "^9.5.0",
    "@microsoft/applicationinsights-clickanalytics-js": "^3.3.6",
    "@microsoft/applicationinsights-web": "^3.3.6",
    "@ministryofjustice/frontend": "^4.0.1",
    "accessible-autocomplete": "^3.0.1",
    "agentkeepalive": "^4.6.0",
    "applicationinsights": "2.9.6",
    "applicationinsights-native-metrics": "^0.0.11",
    "body-parser": "^2.2.0",
    "bunyan": "^1.8.15",
    "bunyan-format": "^0.2.1",
    "compression": "^1.8.0",
    "connect-flash": "^0.1.1",
    "connect-redis": "^8.0.2",
    "cookie-parser": "^1.4.7",
    "csurf": "^1.11.0",
    "express": "^5.0.1",
    "express-prom-bundle": "8.0.0",
    "express-session": "^1.18.1",
    "govuk-frontend": "^5.9.0",
    "helmet": "^8.1.0",
    "hmpo-form-wizard": "^15.0.0",
    "http-errors": "^2.0.0",
    "jquery": "^3.7.1",
    "jwt-decode": "^4.0.0",
    "luxon": "^3.6.0",
    "nocache": "^4.0.0",
    "nunjucks": "^3.2.4",
    "passport": "^0.7.0",
    "passport-oauth2": "^1.8.0",
    "patch-package": "^8.0.0",
    "prom-client": "^15.1.3",
    "redis": "^4.7.0",
    "superagent": "^10.2.0",
    "url-value-parser": "^2.2.0",
    "uuid": "^11.1.0"
  },
  "devDependencies": {
    "@jgoz/esbuild-plugin-typecheck": "^4.0.3",
    "@ministryofjustice/eslint-config-hmpps": "^0.0.1-beta.2",
    "@types/bunyan": "^1.8.11",
    "@types/bunyan-format": "^0.2.9",
    "@types/compression": "^1.7.5",
    "@types/connect-flash": "0.0.40",
    "@types/cookie-parser": "^1.4.8",
    "@types/cookie-session": "^2.0.49",
    "@types/csurf": "^1.11.5",
    "@types/express": "^5.0.1",
    "@types/express-session": "^1.18.1",
    "@types/http-errors": "^2.0.4",
    "@types/jest": "^29.5.14",
    "@types/jsonwebtoken": "^9.0.9",
    "@types/luxon": "^3.4.2",
    "@types/node": "^22.13.13",
    "@types/nunjucks": "^3.2.6",
    "@types/passport": "^1.0.17",
    "@types/passport-oauth2": "^1.4.17",
    "@types/superagent": "^8.1.9",
    "@types/supertest": "^6.0.3",
    "@types/uuid": "^10.0.0",
    "@typescript-eslint/eslint-plugin": "^8.28.0",
    "@typescript-eslint/parser": "^8.28.0",
    "audit-ci": "^7.1.0",
    "axe-core": "^4.10.3",
    "chokidar": "^3.6.0",
    "concurrently": "^9.1.2",
    "cookie-session": "^2.1.0",
    "cypress": "^14.2.0",
    "cypress-axe": "^1.6.0",
    "cypress-split": "^1.24.14",
    "esbuild": "^0.25.1",
    "esbuild-plugin-clean": "^1.0.1",
    "esbuild-plugin-copy": "^2.1.1",
    "esbuild-sass-plugin": "^3.3.1",
    "glob": "^11.0.1",
    "jest": "^29.7.0",
    "jest-html-reporter": "^4.1.0",
    "jest-junit": "^16.0.0",
    "jsonwebtoken": "^9.0.2",
    "lint-staged": "^15.5.0",
    "nock": "^14.0.1",
    "nodemon": "^3.1.9",
    "prettier": "^3.5.3",
    "prettier-plugin-jinja-template": "^2.0.0",
    "sass": "^1.86.0",
    "supertest": "^7.1.0",
    "ts-jest": "^29.3.0",
    "typescript": "^5.8.2"
  },
  "overrides": {
    "csurf": {
      "cookie": "1.0.2"
    },
    "cypress-axe": {
      "cypress": "^14.2.0"
    },
    "@jgoz/esbuild-plugin-typecheck": {
      "esbuild": "$esbuild"
    }
  }
}
