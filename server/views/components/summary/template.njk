{% from "./drugs-summary.njk" import renderDrugsTable %}

{%- macro renderCollection(summary, sessionData) -%}
  {% for entry in summary.answers %}
    <div class="clearfix govuk-!-padding-top-5">
      <h3 class="govuk-heading--s govuk-!-margin-top-0 to-the-left">{{ loop.index | ordinalWordFromNumber | capitalize }}
        {{ summary.field.collection.subject }}</h3>
      {% if sessionData.user | isInEditMode %}
        <a class="govuk-link to-the-right" href="{{ entry.nestedFields[0].changeLink }}">
            Change<span class="govuk-visually-hidden">value for {{ loop.index | ordinalWordFromNumber }}
            {{ summary.field.collection.subject }}</span>
        </a>
      {% endif %}
    </div>
    {% for nested in entry.nestedFields %}
      <div class="govuk-summary-list__row as-block clearfix">
        <dt class="govuk-summary-list__key to-the-left">
          <span class="summary__label">{{ nested.field.text }}</span>
        </dt>
        <dd class="govuk-summary-list__value to-the-left summary-value">
          <ul class="govuk-list">
            {% for answer in nested.answers %}
              <li class="summary-details-list">
                <span class="summary__answer">{{ answer.text | nl2br | safe }}</span>
                {{ renderNestedFields(answer.nestedFields) }}
              </li>
            {% endfor %}
          </ul>
        </dd>
      </div>
    {% endfor %}
  {% endfor %}
{%- endmacro -%}

{%- macro renderTopLevelField(summary, sessionData) -%}
  <div class="govuk-summary-list__row as-block clearfix">
    <dt class="govuk-summary-list__key to-the-left">
      <span class="summary__label">{{ summary.field.text }}</span>
    </dt>
    <dd class="govuk-summary-list__value to-the-left summary-value">
      <ul class="govuk-list">

        {% for answer in summary.answers %}
          <li class="summary-details-list">
            <span class="summary__answer">{{ answer.text | nl2br | safe }}</span>
            {{ renderNestedFields(answer.nestedFields) }}
          </li>
        {% endfor %}

      </ul>
    </dd>
    {% if sessionData.user | isInEditMode %}
      <dd class="govuk-summary-list__actions to-the-right">
        <a class="govuk-link" href="{{ summary.changeLink }}">
        Change<span class="govuk-visually-hidden">value for {{ summary.field.text }}</span>
        </a>
      </dd>
    {% endif %}
  </div>
{%- endmacro -%}

{%- macro renderNestedFields(summaryFields) -%}
  {% for summaryField in summaryFields %}

    {% if summaryField.field.type in["RADIO", "CHECKBOX"] %}

      <ul class="govuk-list">
        {% for answer in summaryField.answers %}
          <li class="summary-details-list">
            <span class="summary__answer--secondary">{{ answer.text | nl2br | safe }}</span>
            {{ renderNestedFields(answer.nestedFields) }}
          </li>
        {% endfor %}
      </ul>

    {% else %}

      {% for answer in summaryField.answers %}
        <span class="summary__answer--secondary">{{ answer.text | nl2br | safe }}</span>
        {{ renderNestedFields(answer.nestedFields) }}
      {% endfor %}

    {% endif %}

  {% endfor %}
{%- endmacro -%}

<dl class="govuk-summary-list">

  {% for summaryField in summaryFields %}

    {% if summaryField.field.type === "COLLECTION" %}
      {{ renderCollection(summaryField, sessionData) }}
    {% else %}
      {% switch summaryField.field.code %}
      {% case 'drug_use_type' %}
        {{ renderDrugsTable(summaryField, sessionData.user) }}
        {% default %}
        {{ renderTopLevelField(summaryField, sessionData) }}
        {% endswitch %}
      {% endif %}

    {% endfor %}

  </dl>
  