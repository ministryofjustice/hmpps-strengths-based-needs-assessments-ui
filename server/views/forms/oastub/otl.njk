{% extends "../../partials/layout.njk" %}
{%- from "govuk/components/input/macro.njk" import govukInput -%}
{%- from "govuk/components/button/macro.njk" import govukButton -%}
{%- from "moj/components/banner/macro.njk" import mojBanner -%}
{% from "govuk/components/button/macro.njk" import govukButton %}

{% set hideBackLink = true %}

{% block header %}
  {% include "../../partials/header.njk" %}
{% endblock %}

{% block content %}
  <div class="govuk-grid-row">
    <div class="govuk-grid-column-three-quarters">
      <div>
        <h1 class="govuk-heading-l">{{ options.pageTitle }}</h1>
        <form id="form" method="post" action="{{ action }}">
          <input type="hidden" name="x-csrf-token" value="{{ getCsrf() }}">
          {%- set field = options.fields["oastub-assessment-uuid"] -%}

          {{ govukInput({
            label: {
              text: field.text,
              classes: "govuk-label--m"
            },
            id: field.code,
            name: field.code,
            hint: field.hint,
            value: assessmentUuid
          }) }}

          <div class="questiongroup-action-buttons">
            {{ govukButton({
              text: buttonText | default('Create one time link'),
              classes: 'govuk-!-margin-bottom-3 govuk-!-margin-right-1'
            }) }}
          </div>
        </form>
      </div>
    </div>
  </div>
{% endblock %}

{% block bodyEnd %}{% endblock %}
