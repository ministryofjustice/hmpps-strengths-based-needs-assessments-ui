{% extends "../../partials/layout.njk" %}
{%- from "govuk/components/input/macro.njk" import govukInput -%}
{%- from "govuk/components/select/macro.njk" import govukSelect -%}
{%- from "govuk/components/button/macro.njk" import govukButton -%}
{%- from "moj/components/banner/macro.njk" import mojBanner -%}
{% from "govuk/components/button/macro.njk" import govukButton %}

{% set hideBackLink = true %}

{% block header %}
  {% include "../../partials/header.njk" %}
{% endblock %}

{% block content %}
  <div class="govuk-grid-row">
    <div class="govuk-grid-column-three-quarters">
      <h1 class="govuk-heading-l">{{ options.pageTitle }}</h1>
      <form id="form" method="post" action="{{ action }}">
        <input type="hidden" name="x-csrf-token" value="{{ getCsrf() }}">

        {{ govukInput({
          label: {
            text: options.fields["oastub-subject-given-name"].text,
            classes: "govuk-label--m"
          },
          id: options.fields["oastub-subject-given-name"].code,
          name: options.fields["oastub-subject-given-name"].code,
          hint: options.fields["oastub-subject-given-name"].hint,
          value: givenName
        }) }}

        {{ govukInput({
          label: {
            text: options.fields["oastub-subject-family-name"].text,
            classes: "govuk-label--m"
          },
          id: options.fields["oastub-subject-family-name"].code,
          name: options.fields["oastub-subject-family-name"].code,
          hint: options.fields["oastub-subject-family-name"].hint,
          value: familyName
        }) }}

        {{ govukSelect({
          label: {
            text: options.fields["oastub-subject-gender"].text,
            classes: "govuk-label--m"
          },
          id: options.fields["oastub-subject-gender"].code,
          name: options.fields["oastub-subject-gender"].code,
          hint: options.fields["oastub-subject-gender"].hint,
          items: options.fields["oastub-subject-gender"].options
        }) }}

        {{ govukSelect({
          label: {
            text: options.fields["oastub-subject-sexually-motivated-offence-history"].text,
            classes: "govuk-label--m"
          },
          id: options.fields["oastub-subject-sexually-motivated-offence-history"].code,
          name: options.fields["oastub-subject-sexually-motivated-offence-history"].code,
          hint: options.fields["oastub-subject-sexually-motivated-offence-history"].hint,
          items: options.fields["oastub-subject-sexually-motivated-offence-history"].options
        }) }}

        {{ govukInput({
          label: {
            text: options.fields["oastub-assessment-uuid"].text,
            classes: "govuk-label--m"
          },
          id: options.fields["oastub-assessment-uuid"].code,
          name: options.fields["oastub-assessment-uuid"].code,
          hint: options.fields["oastub-assessment-uuid"].hint,
          value: assessmentUuid
        }) }}

        <div class="questiongroup-action-buttons">
          {{ govukButton({
              text: buttonText | default('Create one time link'),
              classes: 'govuk-!-margin-bottom-3 govuk-!-margin-right-1'
            }) }}
        </div>
      </form>
    </div>
  </div>
{% endblock %}

{% block bodyEnd %}{% endblock %}